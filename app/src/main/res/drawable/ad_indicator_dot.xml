<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="oval">
                    <solid android:color="#455A64"/>
                    <size android:width="8dp" android:height="6dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="oval">
                    <solid android:color="#B0BEC5"/>
                    <size android:width="4dp" android:height="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>