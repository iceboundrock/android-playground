<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="li.ruoshi.playground.AnimatedButtonActivity">

    <li.ruoshi.playground.view.AnimatedButton
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:buttonSrc="@drawable/cam_button_student"
        app:haloColor="@color/result_points"
        app:buttonDownAnimation="@anim/button_down"
        app:buttonUpAnimation="@anim/button_up"
        android:id="@+id/animated_button"
        />

</RelativeLayout>
